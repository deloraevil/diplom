<Page x:Class="WpfApp1.View.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Search">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150*"></RowDefinition>
            <RowDefinition Height="300*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label x:Name="label_title" Content="Выберите критерий для поиска" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 30" Grid.Row="0"></Label>

        <StackPanel x:Name="stackPanel_for_radiobutton" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top">
            <RadioButton Content="Найти пользователя по фамилии" x:Name="radio_1" Checked="radio_1_Checked"/>
            <RadioButton Content="Найти игру по названию" x:Name="radio_2" Checked="radio_2_Checked"/>
            <RadioButton Content="Список забаненных пользователей" x:Name="radio_3" Checked="radio_3_Checked" />
        </StackPanel>
    </Grid>
</Page>

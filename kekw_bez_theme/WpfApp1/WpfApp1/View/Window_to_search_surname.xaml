<Window x:Class="WpfApp1.View.Window_to_search_surname"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View"
        mc:Ignorable="d"
        Title="Window_to_search_surname" Height="450" Width="800">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel x:Name="stackpanel_first" Margin="50 25 0 0" Grid.Row="0" Orientation="Horizontal">
            <TextBox x:Name="textbox_search" Width="200" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="0,11,0,7"/>
            <Button x:Name="button_search" Content="Search" Width="100" Margin="10,11,0,7" Click="button_search_Click"/>
        </StackPanel>

        <DataGrid x:Name="datagrid_all" Grid.Row="1" Margin="50" ColumnWidth="*">

        </DataGrid>
    </Grid>
</Window>
